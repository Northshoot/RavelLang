<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.stanford.ledcontrol">
    android:versionCode="45"
    android:versionName="0.9" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="23" />



    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:required="true" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:required="true" />

    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:required="true" />
    <!-- needed for bluetooth from v6 -->
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET"
        android:required="true" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Create phones unique ID -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- [END gcm_permission] -->

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.stanford."
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.stanford.ravel.ui.DeviceListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" />
        <!-- used to star ravel service -->
        <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
        <receiver
            android:name="edu.stanford.ravel.controller.BootController"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="edu.stanford.ravel.controller.RavelController"

            android:process=":edu.stanford.ravelcontroller"></service>
        <service
            android:name="edu.stanford.ravel.service.BleService"
            android:enabled="true" />
        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="edu.stanford.blink" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->
    <!-- [START gcm_listener] -->
    <service
        android:name="edu.stanford.ravel.service.GcmService"
        android:exported="true" >
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
        </intent-filter>
    </service>
    <!-- [END gcm_listener] -->
    <!-- [START instanceId_listener] -->
    <service
        android:name="edu.stanford.ravel.service.InstanceIDListenerService"
        android:exported="false">
        <intent-filter>
            <action android:name="com.google.android.gms.iid.InstanceID"/>
        </intent-filter>
    </service>
    <!-- [END instanceId_listener] -->
    <service
        android:name="edu.stanford.ravel.service.RegistrationService"
        android:exported="false">
    </service>

        <provider
            android:name="edu.stanford.ravel.model.LedModelContent"
            android:authorities="edu.stanford.ravel.provider"
            android:exported="false" />

    </application>

    </manifest>
